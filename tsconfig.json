{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "dist",
		"lib": [
			"es2020",
			"dom",
			"webworker"
		],
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"composite": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
		"types": [
			"jest"
		]
	},
	"include": [
		"src/**/*",
		"package.json"
	]
}
